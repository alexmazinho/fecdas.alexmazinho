	$("#close-notificacio a").click(function() {
		url = $(this).attr("href");
		window.opener.location.href=url;
		window.close();
	});

	$(window).unload(function() {
		url = $("#close-notificacio a").attr("href");
		window.opener.location.href=url;
		window.close();
	});
	
});
</script>


