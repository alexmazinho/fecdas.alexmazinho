<script type="text/javascript">
	$(document).ready(function(){
		formFocus();

		showEnquestaClick();

		mainMenuClick();

		changeRoleClub("{{ path('FecdasBundle_changerole') }}");

		$("#mobile-menu-principal").change(function() {
	    	document.location = $(this).val();
		});
	});

	$('#menu-user')
	  .css('opacity', 0)
	  .slideDown('slow')
	  .animate(
	    { opacity: 1 },
	    { queue: false, duration: 'slow' }
	  );
	
</script>


{% endblock %}
