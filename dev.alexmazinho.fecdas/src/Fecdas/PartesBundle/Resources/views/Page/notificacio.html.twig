{% extends 'FecdasPartesBundle::layout.html.twig' %}

{% block title %}Aplicaci贸 gesti贸 FECDAS. Notificaci贸 Pagament{% endblock %}

{% block fecdas_login %} {% endblock %}
{% block sidebar %}{% endblock %}

{% block body %}
    <div id="notificacio">
	<div class="sms-notice">
		{% if result == 'ok' %}
			Pagament realitzat correctament 
		{% else  %}
			{% if result == 'pend' %}
				Pagament pendent de comprovar per part de la federaci贸
			{% else  %}
				S'ha produit un error durant el pagament 
			{% endif %} 
		{% endif %} 
		
	</div>
	<div id="close-notificacio">
		{% if result == 'ok' or result == 'pend' %}
		<a href="{{ path('FecdasPartesBundle_parte', { 'id': parteId }) }}">Torna</a>
		{% else  %}
		<a href="{{ path('FecdasPartesBundle_partes') }}">Torna</a>
		{% endif %}
	</div>
    </div>
{% endblock %}

{% block footer %}{% endblock %}

{% block javascripts %}
<script src="{{ asset('js/my-jquery-script.js') }}" type="text/javascript"></script>

<script type="text/javascript">

$(document).ready(function(){
	
	$("#close-notificacio").click(function() {
		window.opener.location.href='partes';
		window.close();
	});

	$(window).unload(function() {
		window.opener.location.href='partes';
		window.close();
	});
	
});
</script>


{% endblock %}


