<div id="formduplicats-dades" class="row">	
	<div class="col-md-3 col-sm-5 hidden-field">
		<div class="row">
    		<div class="form-group col-md-10">
    			<div class="input-group">
        			<div class="input-group-addon">DNI/NIE</div>
            	    {{ form_widget(form.dni, { 'attr': {'class': 'form-control'} }) }}
            	</div>
    		</div>
    		<div class="form-group col-md-12">
        		<div class="input-group">
        			<div class="input-group-addon">Nom</div>
        			{{ form_widget(form.nom, { 'attr': {'class': 'form-control'} }) }}
        		</div>
        	</div>
        	<div class="form-group col-md-12">
        		<div class="input-group">
        			<div class="input-group-addon">Cognoms</div>
        			{{ form_widget(form.cognoms, { 'attr': {'class': 'form-control'} }) }}
        		</div>
        	</div>
        </div>
	</div>
	{% if form.fotoupld is defined %} 
	<div class="col-md-1 col-sm-2 hidden-field">
       	{{ form_widget(form.fotoupld) }}
       	<div class="galeria-upload">
       		<div class="image-upload"><span class="box-center-txt">Pujar foto<br/>(click)</span></div>
       	</div>
	</div>
    {% endif %}
	<div class="col-md-4 col-sm-8 hidden-field">
		{% set arearows = 5 %}
		{% if form.titol is defined %}
			{% set arearows = 2 %}
			<div class="form-group">
	            {{ form_widget(form.titol, { 'attr': {'class': 'form-control'} }) }}
	        </div>
        {% endif %}
	    <div class="form-group">
    	    {{ form_label(form.observacions, 'Observacions:') }}
    	    {{ form_widget(form.observacions, { 'attr': {'class': 'form-control', 'rows': arearows} }) }}
    	</div>
	</div>

    <div class="col-md-5 col-sm-8 hidden-field cistella-resum">
    	<div class="alert alert-success">
    	{%  if app.session.has('cart') %}
    		<h3 class=""><i class="fa fa-shopping-cart"></i> Petici√≥ de duplicat</h3>
    	    {% set cart = app.session.get('cart', {'productes' : {}, 'total' : 0}) %}
    	    {% if cart.productes|length > 0 %}
    	    	{% set allowremove = false %}
    	    	{% set tipus = constant('FecdasBundle\\Controller\\BaseController::TIPUS_PRODUCTE_DUPLICATS') %}
    	        {% include "FecdasBundle:Facturacio:graellaproductescistellaform.html.twig" %}
    		{% endif %}        
    	{% endif %}
		</div>
    </div>

    <div class="col-md-1 col-sm-2 hidden-field">
    	<input id="duplicat_submit" type="submit" class="btn btn-default" value="Enviar" name="formduplicats-button-envia"/>
    </div>
    
</div>