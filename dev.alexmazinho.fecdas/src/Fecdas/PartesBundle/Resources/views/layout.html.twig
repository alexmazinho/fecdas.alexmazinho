{# src/Fecdas/PartesBundle/Resources/views/layout.html.twig #}
{% extends '::base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/style.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}

 {% block javascriptshead %}
    {{ parent() }}
    <script src="{{ asset('js/my-jquery-script-admin.js') }}" type="text/javascript"></script>
    <script src="{{ asset('js/my-jquery-script-enquestes.js') }}" type="text/javascript"></script>
{% endblock %}

{% block fecdas_logo %}
	<a href="http://www.fecdas.cat" target="_blank">
	<img src="{{ asset('images/fecdaslogo.png') }}">
	</a>
{% endblock %}

{% block fecdas_title %}
    Aplicació de tramitació de llistes d'assegurats<br/> <i>Federació Catalana d'Activitats Subaquàtiques</i>
{% endblock %}

{% block fecdas_login %} 
	{# if ( not ( app.session.has('username') and app.session.has('remote_addr') ) or
    	  ( app.session.get('remote_addr') != app.request.server.get("REMOTE_ADDR") ) )  #}
   	{% if authenticated == false  %}
    	<a href="{{ path('FecdasPartesBundle_login') }}">Iniciar sessió<img src="{{ asset('images/icon_login.png') }}"></a>
  	{% else %}
    	{{ app.session.get('username') }} <a href="{{ path('FecdasPartesBundle_logout') }}"><img src="{{ asset('images/icon_signout.png') }}"></a>

    	<div id="block-useractions">
			<div><a href="{{ path('FecdasPartesBundle_contact') }}">Contacte</a></div>
			<div><a href="{{ path('FecdasPartesBundle_user') }}">Racó d'usuari</a></div>
			{% if enquestausuari is defined and enquestausuari == true %}
			<div><a class="featured enquesta-action-open" href="{{ path('FecdasPartesBundle_enquestausuari') }}">Enquesta</a></div>
			{% endif %}
			<div><a href="http://www.fecdas.cat/faqs.php" target="_blank">FAQ</a></div>
		</div>
   	{% endif %}
	
{% endblock %}

{% block sidebar %}
	<nav>
		<ul class="navigation">
			<li id="menu-home"><a href="{{ path('FecdasPartesBundle_homepage') }}"><span class="menu-icon ui-icon ui-icon-triangle-1-e"></span>Pàgina principal</a></li>
			{% if authenticated == false  %}
			<li id="menu-login"><a href="{{ path('FecdasPartesBundle_login') }}"><span class="menu-icon ui-icon ui-icon-triangle-1-e"></span>Iniciar sessió</a></li>
			<li id="menu-contact"><a href="{{ path('FecdasPartesBundle_contact') }}"><span class="menu-icon ui-icon ui-icon-triangle-1-e"></span>Contacte</a></li>
			{% else %}
				{% if admin == true  %}
				<li id="menu-adm"><a class="main-menu-action" href="#"><span class="menu-icon ui-icon ui-icon-triangle-1-e"></span>Administració</a>
				<ul class="submenu">
					<li id="menu-admclubs"><a href="{{ path('FecdasPartesBundle_club') }}">
					<span class="menu-icon ui-icon ui-icon-triangle-1-e menu-subitem"></span>Clubs i usuaris</a></li>
					<li id="menu-admllistes"><a href="{{ path('FecdasPartesBundle_recents') }}">
					<span class="menu-icon ui-icon ui-icon-triangle-1-e menu-subitem"></span>Llistes recents</a></li>
					<li id="menu-admsaldos"><a href="{{ path('FecdasPartesBundle_clubs') }}">
					<span class="menu-icon ui-icon ui-icon-triangle-1-e menu-subitem"></span>Saldos clubs</a></li>
					<li id="menu-admenquestes"><a href="{{ path('FecdasPartesBundle_enquestes') }}">
					<span class="menu-icon ui-icon ui-icon-triangle-1-e menu-subitem"></span>Enquestes</a></li>
				</ul></li>
				{% endif %}
				<li id="menu-tram"><a class="main-menu-action" href="#"><span class="menu-icon ui-icon ui-icon-triangle-1-e"></span>Tramitació</a>
				<ul class="submenu">
					<li id="menu-partes"><a href="{{ path('FecdasPartesBundle_partes') }}"><span class="menu-icon ui-icon ui-icon-triangle-1-e menu-subitem"></span>Llicències</a></li>
					<li id="menu-import"><a href="{{ path('FecdasPartesBundle_importcsv') }}"><span class="menu-icon ui-icon ui-icon-triangle-1-e menu-subitem"></span>Importació de llicències</a></li>
				</ul></li>				
				<li id="menu-cons"><a class="main-menu-action" href="#"><span class="menu-icon ui-icon ui-icon-triangle-1-e"></span>Consulta</a>
				<ul class="submenu">	
					<li id="menu-assegurats"><a href="{{ path('FecdasPartesBundle_assegurats') }}"><span class="menu-icon ui-icon ui-icon-triangle-1-e menu-subitem"></span>Assegurats</a></li>
					{% if busseig == true  %}
					<li id="menu-busseig"><a href="{{ path('FecdasPartesBundle_busseig') }}"><span class="menu-icon ui-icon ui-icon-triangle-1-e menu-subitem"></span>Llicències amb el DNI</a></li>
					{% endif %}
				</ul></li>
			{% endif %}
		</ul>
	</nav>
{% endblock %}

{% block javascripts %}

{{ parent() }}

