{% block fecdas_logo %}
	<a href="http://www.fecdas.cat" target="_blank">
	<img src="{{ asset('images/fecdaslogo.png') }}">
	</a>
{% endblock %}

{% block fecdas_title %}
    Aplicació de tramitació de llistes d'assegurats<br/> <i>Federació Catalana d'Activitats Subaquàtiques</i>
{% endblock %}

{% block fecdas_login %} 
	{# if ( not ( app.session.has('username') and app.session.has('remote_addr') ) or
    	  ( app.session.get('remote_addr') != app.request.server.get("REMOTE_ADDR") ) )  #}
    	<div id="menu-user">
			
			<div class="btn-group menu-user-dropdown">
			  <a class="btn btn-primary" href="#"><i class="fa fa-user fa-fw"></i> {{ app.session.get('username') }}{% if userclub is defined %}{{ userclub }}{% else %} entrada{% endif %}</a>
			  <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#">
			    <span class="fa fa-caret-down"></span></a>
			  <ul class="dropdown-menu">
				<li><a href="{{ path('FecdasBundle_contact') }}">Contacte <i class="fa fa-envelope-o fa-fw"></i></a></li>
			    <li><a href="http://www.fecdas.cat/faqs.php" target="_blank">FAQ <i class="fa fa-info fa-fw"></i></a></li>
				{% if authenticated == true  %}
					{% if enquestausuaripendent is defined and enquestausuaripendent == true %}
						<li><a class="featured enquesta-action-open" href="{{ path('FecdasBundle_enquestausuari') }}">Enquesta <i class="fa fa-question fa-fw"></i></a></li>
					{% endif %}
					<li><a href="{{ path('FecdasBundle_user') }}">Racó d'usuari <i class="fa fa-key fa-fw"></i></a></li>
					<li><a href="{{ path('FecdasBundle_logout') }}">Tancar sessió <i class="fa fa-sign-out fa-fw"></i></a></li>
				{% else %}
					<li><a href="{{ path('FecdasBundle_login') }}">Iniciar sessió <i class="fa fa-sign-in fa-fw"></i></a></li>	
				{% endif %}	
			    {% if roleform is defined %}
			    <li class="divider"></li>
			    <li>{{ form_label(roleform.role) }}</li>
			    <li><p>{{ form_widget(roleform.role) }} <i class="fa fa-exchange fa-fw"></i></p></li>
				{% endif %}
				{% if userclub is defined %}
				<li>{{ userclub }}</li>
				{% endif %}
			  </ul>
			</div>
			
	    	<select id="mobile-menu-principal">
				<option value="">Seleccionar una pàgina</option>
				<option value="{{ path('FecdasBundle_homepage') }}">Pàgina principal</option>
				{% if authenticated == false  %}
				<option value="{{ path('FecdasBundle_login') }}">Iniciar sessió</option>
				<option value="{{ path('FecdasBundle_contact') }}">Contacte</option>
				{% else %}
				{% if admin == true  %}
				<option value="">Administració</option>
				<option value="{{ path('FecdasBundle_club') }}"> - Clubs i usuaris</option>
				<option value="{{ path('FecdasBundle_recents', { 'sort': 'p.dataentrada', 'direction':'desc' }) }}"> - Llistes recents</option>
				<option value="{{ path('FecdasBundle_clubs', { 'sort': 'c.nom', 'direction':'asc' }) }}"> - Saldos clubs</option>
				<option value="{{ path('FecdasBundle_enquestes') }}"> - Enquestes</option>
				{% endif %}
				<option value="">Tramitació</option>
				<option value="{{ path('FecdasBundle_parte') }}"> - Introduir noves llicències</option>
				<option value="{{ path('FecdasBundle_importcsv') }}"> - Importació de llicències</option>
				<option value="{{ path('FecdasBundle_duplicats', {'sort': 'd.datapeticio', 'direction':'desc'}) }}"> - Duplicats</option>
				<option value="">Consulta</option>
				<option value="{{ path('FecdasBundle_partes', { 'sort': 'p.dataalta', 'direction':'desc' }) }}"> - Llicències</option>
				<option value="{{ path('FecdasBundle_assegurats', { 'sort': 'e.cognoms', 'direction':'asc' }) }}"> - Assegurats</option>
				{% if busseig == true  %}
				<option value="{{ path('FecdasBundle_busseig') }}"> - Llicències amb el DNI</option>
				{% endif %}
				<option value="">Racó d'usuari</option>
				<option value="{{ path('FecdasBundle_user') }}">Racó d'usuari</option>
				{% if enquestausuari is defined and enquestausuari == true %}
				<option value="{{ path('FecdasBundle_enquestausuari') }}">Enquesta</option>
				{% endif %}
				<option value="{{ path('FecdasBundle_contact') }}">Contacte</option>
				<option value="http://www.fecdas.cat/faqs.php">FAQ</option>
				{% endif %}
			</select>
		</div>
   	
	
{% endblock %}

