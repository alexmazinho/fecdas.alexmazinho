{% block footer %}{% endblock %}

{% block javascripts %}
<script src="{{ asset('js/my-jquery-script.js') }}" type="text/javascript"></script>

<script type="text/javascript">

$(document).ready(function(){
	/*window.close();
	dialegError("Error", "wewewewewe", 300, 100);
