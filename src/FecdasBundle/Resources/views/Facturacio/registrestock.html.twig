{# src/Fecdas/PartesBundle/Resources/views/Facturacio/registrestock.html.twig #}
	{% include 'FecdasBundle:Includes:messages.html.twig' %}
    
	<form id="formregistrestock" action="{{ path('FecdasBundle_registrestock') }}" method="post" {{ form_enctype(form) }}  class="appform">
		<div class="row">
			<div class="col-md-8">
				{{ form_label(form.producte, 'Producte') }}
				<div id="formregistrestock-producte"  class="">
				{{ form_widget(form.producte, { 'attr': {'class': 'form-control form-control-left'} }) }}
				</div>
			</div>
			<div class="col-md-4">
				<div class="form-group">
					{{ form_label(form.dataregistre, 'Registre') }}
					<div id="formregistrestock-dataregistre" class="input-group">
						{{ form_widget(form.dataregistre, { 'attr': {'class': 'form-control form-control-center'} }) }}
						<span class="input-group-addon input-group-addon-icon open-calendar"><span class="fa fa-calendar fa-1x"></span></span>
					</div>
				</div>
			</div>
		</div>
		{% if (registre.anulat == true) %}
		<div class="row">
			<div class="col-md-offset-8 col-md-4">
				<div class="form-group">
					{{ form_label(form.databaixa, 'Data de baixa') }}
					<div id="formregistrestock-databaixa" class="input-group">
						{{ form_widget(form.databaixa, { 'attr': {'class': 'form-control form-control-center formtime-calendar'} }) }}
						<span class="input-group-addon input-group-addon-icon open-calendar"><span class="fa fa-calendar fa-1x"></span></span>
					</div>
				</div>
			</div>
		</div>
		{% endif %}
		<div class="row">
			<div class="col-md-3">
				{{ form_label(form.preuunitat, 'Preu unitat') }}
				<div id="formregistrestock-preuunitat"  class="">
					{{ form_widget(form.preuunitat, { 'attr': {'class': 'form-control form-control-right'} }) }}
				</div>
			</div>
			<div class="col-md-2">
				{{ form_label(form.unitats, 'Unitats') }}
				<div id="formregistrestock-unitats"  class="">
					{{ form_widget(form.unitats, { 'attr': {'class': 'form-control form-control-center'} }) }}
				</div>
			</div>
			<div class="col-md-7">
				{{ form_label(form.factura, 'Factura') }}
				<div id="formregistrestock-factura"  class="">
					{{ form_widget(form.factura, { 'attr': {'class': 'form-control form-control-left'} }) }}
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-md-12">
				<div class="form-group">
					{{ form_label(form.comentaris, 'Comentaris') }}
					<div id="formregistrestock-comentaris"  class="input-group ">
			  			<span class="input-group-addon">Comentaris</span>
						{{ form_widget(form.comentaris, { 'attr': {'class': 'form-control'} }) }}
					</div>
				</div>
			</div>
			
		</div>
		
		<div id="formregistrestock-rest" class="hidden">{{ form_rest(form) }}</div>
		
    </form>


