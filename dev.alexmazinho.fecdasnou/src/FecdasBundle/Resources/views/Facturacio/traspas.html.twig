{# src/Fecdas/PartesBundle/Resources/views/Page/traspas.html.twig #}
{% extends 'FecdasBundle::layout.html.twig' %}

{% form_theme form 'FecdasBundle:Includes:formtheming.html.twig' %}

{% block stylesheets %}
	
	<link href="{{ asset('css/jquery.datetimepicker.css') }}" type="text/css" rel="stylesheet" />
	
	{{ parent() }}
{% endblock %}

{% block title %}Aplicació gestió FECDAS. Generació de fitxers er comptabilitat {% endblock %}

{% block body %}
    <header>
        <h1>Traspàs comptabilitat</h1>
    </header>
    
	{% include 'FecdasBundle:Includes:messages.html.twig' %}    
	<form id="formtraspas" action="{{ path('FecdasBundle_traspascomptabilitat') }}" method="post" {{ form_enctype(form) }}  class="appform">
		<div class="row">
			{% if ultimenviament is not null %}
			<h4>darrer enviament fins a {{ ultimenviament.dataenviament|date('d/m/Y') }}</h4>
			{% else %}
			<h4>encara no s'ha realitzat cap enviament</h4>
			{% endif %}
			<div class="col-md-3">
				<div class="form-group">
					<label></label>
					<div id="formtraspas-datadesde" class="input-group">
		  				<span class="input-group-addon">Des de</span>
						{{ form_widget(form.datadesde, { 'attr': {'class': 'form-control form-control-center formtime-calendar'} }) }}
						<span class="input-group-addon input-group-addon-icon open-calendar"><span class="fa fa-calendar fa-1x"></span></span>
					</div>
				</div>
			 </div>
			 <div class="col-md-3">
				<div class="form-group">
					<label></label>
					<div id="formtraspas-datafins" class="input-group">
		  				<span class="input-group-addon">Fins</span>
						{{ form_widget(form.datafins, { 'attr': {'class': 'form-control form-control-center formtime-calendar'} }) }}
						<span class="input-group-addon input-group-addon-icon open-calendar"><span class="fa fa-calendar fa-1x"></span></span>
					</div>
				</div>
			 </div>
			 <div class="col-md-3">
				<div class="form-group">
					<label></label>
					<div id="formtraspas-datafins" class="input-group">
		  				<span class="input-group-addon">Any fiscal</span>
						( Pendent selector de l'any fiscal )
						<span class="input-group-addon input-group-addon-icon open-calendar"><span class="fa fa-calendar fa-1x"></span></span>
					</div>
				</div>
			 </div>
			 <div class="col-md-2">
			 	<div class="form-group">
			 		<label>&nbsp;</label>
			 		<div class="input-group">
						<button type="submit" id="formtraspas-desar" class="btn btn-default btn-lg"><i class="fa fa-save"></i> Desar</button>
					</div>
				</div>
			 </div>	
		</div>
		
		<div id="formtraspas-rest" class="sr-only">{{ form_rest(form) }}</div>
		
		<div id="error" class="sms-notice" style="display:none"> </div>
		
		<div class="row"></div>
    </form>

{% endblock %}

{% block javascripts %}

	{{ parent() }}

	<!-- Datetime plugin's. http://xdsoft.net/jqplugins/datetimepicker/ -->
	<script src="{{ asset('js/jquery.datetimepicker.js') }}" type="text/javascript"></script>

	<script type="text/javascript">

		$(document).ready(function(){
			setMenuActive("menu-admproducte");

			var current = new Date();
			
			var mindate = new Date (current.getFullYear(), current.getMonth() - 8, current.getDay());
			var maxdate = new Date (current.getFullYear(), current.getMonth() + 1, current.getDay());

			initDateTimePicker ( 
				$( '#form_datadesde' ), 
				mindate, 
				maxdate, 
				current, 
				'datadesde-picker', 
				false,
				''
			);
			
			initDateTimePicker ( 
				$( '#form_datafins' ), 
				mindate, 
				current, 
				current, 
				'datafins-picker', 
				false,
				''
			);
			
		});
		
	</script>


{% endblock %}

