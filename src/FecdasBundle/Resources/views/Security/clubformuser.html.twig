<div class="form-user-club">
	{{ form_start(form, {'action': path('FecdasBundle_usuariclub'), 'method': 'POST', 'attr': {'class': 'appform', 'id':'formuserclub', 'autocomplete':'off'}}) }}
	<div class="row"><div class="col-md-12"><div class="space20"></div></div></div>
	{% include 'FecdasBundle:Includes:messages.html.twig' %}
	<div class="row">
		{{ form_widget(form.id) }}
		<div class="col-md-12">
			<div class="form-group">
				{{ form_label(form.auxinstructordni, 'Escollir persona (Instructors)') }}
				<div class="input-group">
					<span class="input-group-addon input-group-addon-icon"><span class="fa fa-search fa-1x"></span></span>
					{{ form_widget(form.auxinstructordni, { 'attr': {'class': 'form-control'} }) }}
				</div>
			</div>
		</div>
		<div class="col-md-6">
			<div class="form-group">
				{{ form_label(form.user, 'Usuari (Adre√ßa de correu)', { 'label_attr': {'class': ''} }) }}
				<div class="input-group" >
					<span class="input-group-addon input-group-addon-icon"><span class="fa fa-user fa-1x"></span></span>
					{{ form_widget(form.user, { 'attr': {'class': 'form-control auto-complete-off','placeholder':'Nom d\'usuari', 'autocomplete':'off', 'autofocus':true } }) }}
				</div>
			</div>
		</div>
		<div class="col-md-6">
			<div class="form-group">
				{{ form_label(form.role, 'Rol *', { 'label_attr': {'class': ''} }) }}
				<div class="input-group" >
					<span class="input-group-addon input-group-addon-icon"></span>
					{{ form_widget(form.role, { 'attr': {'class': 'form-control' } }) }}
				</div>
			</div>
		</div>
		<div class="col-md-4 form-user-password-manual">
			<div class="form-group">
				{{ form_label(form.pwd.first, 'Paraula clau *', { 'label_attr': {'class': 'auto-complete-off'} }) }}
				<div class="input-group" >
					<span class="input-group-addon input-group-addon-icon"><i class="fa fa-secret fa-1x"></i></span>
					{{ form_widget(form.pwd.first, { 'attr': {'class': 'form-control','placeholder':'Nova clau', 'autocomplete':'off' } }) }}
				</div>
			</div>
		</div>
		<div class="col-md-4 form-user-password-manual">
			<div class="form-group">
				{{ form_label(form.pwd.second, 'Repetir paraula clau *', { 'label_attr': {'class': 'auto-complete-off', 'autocomplete':'off'} }) }}
				<div class="input-group" >
					<span class="input-group-addon input-group-addon-icon"><i class="fa fa-secret fa-1x"></i></span>
					{{ form_widget(form.pwd.second, { 'attr': {'class': 'form-control','placeholder':'Repetir clau' } }) }}
				</div>
			</div>
		</div>
		<div class="col-md-4 form-user-password-random" style="display: none">
			<div class="form-group">
				{{ form_label(form.randompwd, 'Paraula clau generada', { 'label_attr': {'class': 'auto-complete-off', 'autocomplete':'off'} }) }}
				<div class="input-group" >
					<span class="input-group-addon input-group-addon-icon"><i class="fa fa-secret fa-1x"></i></span>
					{{ form_widget(form.randompwd, { 'attr': {'class': 'form-control','placeholder':'Paraula clau generada' } }) }}
				</div>
			</div>
		</div>
		<div class="col-md-4">
			<div class="form-group" >
				<label class="">&nbsp;</label>
				<div class="input-group" >
					<a id="formuserclub-random" href="javascript:void(0);" class="btn btn-default"><i class="fa fa-magic fa-1x blue"></i> generar</a>
					<!-- <div class="checkbox-inline">
				    	<label>{# form_widget(form.forceupdate) #} Obliga a actualitzar	</label>
					</div> -->
					<a id="formuserclub-manual" href="javascript:void(0);" class="btn btn-default" style="display: none"><i class="fa fa-pencil fa-1x orange"></i> manual</a>
				</div>
			</div>
		</div>
	</div>
	<div id="formclub-rest" class="hidden">{{ form_rest(form) }}</div>
	{{ form_end(form) }}				
</div>