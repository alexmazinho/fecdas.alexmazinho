{# src/Fecdas/PartesBundle/Resources/views/Page/index.html.twig #}
{% extends 'FecdasPartesBundle::layout.html.twig' %}

{% block javascriptshead %}
 	{{ parent() }}
	<script src="{{ asset('js/jquery-ui-1.8.21.custom.min.js') }}" type="text/javascript"></script>
   	 {{ form_javascript(form) }}
{% endblock %}

{% block title %}Aplicació gestió FECDAS. Racó de l'usuari{% endblock %}

{% block body %}
	<header>
        <h1>Racó de l'usuari. Actualització de clau</h1>
    </header>

    {% if app.session.hasFlash('error-notice') %}
    <div class="sms-notice">
        {{ app.session.flash('error-notice') }}
    </div>
	{% endif %}

	
	<div class="formuser-main">
		<form id="form-formuser" action="{{ path('FecdasPartesBundle_user') }}" method="post" {{ form_enctype(form) }}  class="appform">
	    	 <div id="formuser-user">
				{{ form_label(form.user, 'Usuari', { 'attr': {'class': 'formlabel-inside'} }) }}
				{{ form_widget(form.user, { 'attr': {'class': 'forminput-inside'} }) }}
			 </div> 
	    	 <div id="formuser-pwd">
				{{ form_label(form.pwd.first, 'Nova paraula clau', { 'attr': {'class': 'formlabel-inside'} }) }}
				{{ form_widget(form.pwd.first, { 'attr': {'class': 'forminput-inside'} }) }}
			 </div> 
	    	 <div id="formuser-pwdrepeat">
				{{ form_label(form.pwd.second, 'Repeteix la paraula clau', { 'attr': {'class': 'formlabel-inside'} }) }}
				{{ form_widget(form.pwd.second, { 'attr': {'class': 'forminput-inside'} }) }}
			 </div> 
			 <div id="formuser-forceupdate">
			 	{{ form_label(form.forceupdate, 'Obliga a actualitzar', { 'attr': {'class': 'formlabel-lefttocheckbox'} }) }}
				{{ form_widget(form.forceupdate, { 'attr': {'class': 'formcheckbox-right'} }) }}
			 </div>
			 <div id="formuser-rest">
			 	{{ form_widget(form.recoverytoken) }}
			 	{{ form_widget(form.usertoken) }}
			 	{{ form_rest(form) }}</div>
       	 	 <div id="formuser-submit" class="parte-submit form-left" >	
		 	 	<input type="submit" id="formuser-button-submit" class="forminput-inside" value="Actualitza" name="formuser-button-submit"/>
			 </div>
	    </form>
	</div>
    
{% endblock %}

{% block javascripts %}

{{ parent() }}

<script type="text/javascript">

$(document).ready(function(){
	validarConsultaBusseig();
});

</script>


{% endblock %}

