<div class="row">
	<div class="col-md-5">
		<h3 class="blue">{{ titol }}</h3>
	</div>
	{% if curs.editable == true %}
	<div class="col-md-7 col-last-right">
		<div class="form-inline">	
			<div class="form-group">
				<div class="input-group">
					<span class="input-group-addon input-group-addon-icon"><span class="fa fa-search fa-1x"></span></span>
					{{ form_widget(auxdocent, { 'attr': {'class': 'form-control'} }) }}
				</div>
			</div>
			<div class="form-group">
				<a class="add-docent link" href="javascript:void(0);" ><i class="fa fa-chevron-circle-down fa-2x blue"></i></a>
			</div> 
		</div>
	</div>
	{% endif %}
	<div class="col-md-12">
		<div class="table-header">
			<div id="list-header" class="list-docent-curs-header">
				<div class="col-id hidden">&nbsp;</div>
				<div class="col-listheader col-docent-dni">DNI</div>
				<div class="col-listheader col-docent-nom">Nom i cognoms</div>
				<div class="col-listheader col-docent-hteoriques">Te√≤riques</div>
				<div class="col-listheader col-docent-haula">Aula</div>
				<div class="col-listheader col-docent-hpiscina">Piscina</div>
				<div class="col-listheader col-docent-hmar">Mar</div>
				<div class="col-listheader col-actions">&nbsp;</div>
			</div>
		</div>
		<div class="table-noscroll">
   			<ul id="list-data" class="docents-curs {{ tipus }}s" data-prototype="{{ form_widget(prototype)|e('html_attr') }}">
   				{# if docents|length == 0 %}
					<li class="docent-form-row"><div class="docent-form"><div class="data-docent-cell"><div class="alert alert-success" role="alert">Cap {{ tipus }} assignat</div></div></div></li>
				{% else #}
					{% set proto = false %}
					
					{% for docent in docents %}
						{% include 'FecdasBundle:Titulacions:cursdocent.html.twig' %}
					{% endfor %}
				{# endif #}
   				
   				{% if docents|length == 0 %}
					<li class="docent-form-row"><div class="docent-form"><div class="data-docent-cell"><div class="alert alert-success" role="alert">Cap {{ tipus }} assignat</div></div></div></li>
				{% endif %}
			 </ul> 
		</div>				 
	</div>
</div>
	