{% extends 'FecdasPartesBundle::layout.html.twig' %}

{% block title %}Aplicació gestió FECDAS. Autenticació {% endblock %}

{% block body %}
    <header>
        <h1>Gestió FECDAS</h1>
    </header>

    {% if app.session.hasFlash('sms-notice') %}
    <div class="sms-notice">
        {{ app.session.flash('sms-notice') }}
        {{ app.session.clearflashes }}
    </div>
	{% endif %}
    
    <p><a href="{{ path('FecdasPartesBundle_login') }}">Iniciar sessió</a></p>
    
{% endblock %}
