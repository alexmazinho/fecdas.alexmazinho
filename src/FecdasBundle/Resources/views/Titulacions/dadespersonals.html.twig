{# src/Fecdas/PartesBundle/Resources/views/Page/index.html.twig #}
{% extends 'FecdasBundle::layout.html.twig' %}

{% block stylesheets %}
	
	<link href="{{ asset('css/jquery.datetimepicker.css') }}" type="text/css" rel="stylesheet" />
	
	{{ parent() }}
{% endblock %}

{% block title %}Aplicació gestió FECDAS. Informació de titulacions i dades personals del Club{% endblock %}

{% block body %}
   	{{ form_start(form, {'action': path('FecdasBundle_dadespersonals'), 'method': 'GET', 'attr': {'class': 'appform', 'id':'form_dadespersonals'}}) }}
		<header>
			<div class="row">
				<div class="col-md-8"><h1>Titulacions i dades personals</h1></div>
    		    <div class="col-md-4 col-last-right">
					{% if persones.getTotalItemCount <= 3000 %}
						<div class="buttons-top-bootstrap">
							<div class="button-top"><a class="link" href="{{ path('FecdasBundle_titulacionstopdf', persones.params) }}" alt="Descarregar les llistes de titulacions" 
								title="Descarregar les llistes de titulacions">
								<i class="fa fa-file-pdf-o fa-1x red"></i></a></div> 
							<div class="button-top"><a class="print link" target="_blank" href="{{ path('FecdasBundle_titulacionstopdf', persones.params|merge({ 'print': 1 })) }}" alt="Imprimir les llistes de titulacions" 
								title="Imprimir les llistes de titulacions">
								<i class="fa fa-print fa-1x blue"></i></a></div>
							<div class="button-top"><a class="link export-csv" href="{{ path('FecdasBundle_dadespersonals', persones.params|merge({ 'format': 'csv' })) }}" alt="Exportar les dades de les titulacions" 
								title="Exportar les dades de les titulacions"><i class="fa fa-file-excel-o fa-1x green"></i></a></div>	
						</div> 
					{% endif %}
				</div>
			</div>
   		</header>
   		<section class="form-dadespersonals">
	   		<div class="row">
				{% if admin == true %}
					<div class="col-md-3 col-xs-12">
						<div class="form-group">
						   	{{ form_label(form.clubs, 'Clubs (Admins.)', { 'label_attr': {'class': ''} }) }}
							{{ form_widget(form.clubs, { 'attr': {'class': 'form-control'} }) }}
						</div>
					</div>
				{% endif %}
				<div class="col-md-3 col-xs-3">
				  	<div class="form-group">
						{{ form_label(form.dni, 'Dades personals', { 'label_attr': {'class': ''} }) }}
				  		<div class="input-group">
							{{ form_widget(form.dni, { 'attr': {'class': 'form-control','placeholder':'DNI/NIE' } }) }}
							<span class="input-group-addon input-group-addon-icon"><span class="fa fa-search fa-1x"></span></span>
						</div>
					</div>
				</div>
				<div class="col-md-3 col-xs-3">
				  	<div class="form-group">
				  		<label class="" for="form_nom">&nbsp;</label>
				  		<div class="input-group">
							{{ form_widget(form.nom, { 'attr': {'class': 'form-control', 'placeholder':'Nom' } }) }}
							<span class="input-group-addon input-group-addon-icon"><span class="fa fa-search fa-1x"></span></span>
						</div>
					</div>
				</div>
				<div class="{% if admin == true %}col-md-3{% else %}col-md-6{% endif %}  col-xs-6">
				  	<div class="form-group">
				  		<label class="" for="form_cognoms">&nbsp;</label>
				  		<div class="input-group">
							{{ form_widget(form.cognoms, { 'attr': {'class': 'form-control', 'placeholder':'Cognoms' } }) }}
							<span class="input-group-addon input-group-addon-icon"><span class="fa fa-search fa-1x"></span></span>
						</div>
					</div>
				</div>
			</div>	
			<div class="row">	
				<div class="col-md-2 col-xs-5">
					<div class="form-group">
						{{ form_label(form.desde, 'Amb llicència des de') }}
						<div class="input-group" >
							{{ form_widget(form.desde, { 'attr': {'class': 'form-control formtime-calendar'} }) }}
							<span class="input-group-addon input-group-addon-icon open-calendar"><span class="fa fa-calendar fa-1x"></span></span>
						</div>
					</div>
				</div>
		    	<div class="col-md-2 col-xs-5">
					<div class="form-group">
						{{ form_label(form.fins, 'fins') }}
						<div class="input-group" >
							{{ form_widget(form.fins, { 'attr': {'class': 'form-control formtime-calendar'} }) }}
							<span class="input-group-addon input-group-addon-icon open-calendar"><span class="fa fa-calendar fa-1x"></span></span>
						</div>
					</div>
				</div>
				<div class="col-md-5 col-xs-12">
					<div class="form-group">
						<label>&nbsp;</label>
						<div class="checkbox">
					    	<label>
					      		{{ form_widget(form.vigent) }} Només amb llicència vigent
					    	</label>
						</div>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-4 col-xs-6">
					<div class="form-group">
					   	{{ form_label(form.titols, 'Titols CMAS', { 'label_attr': {'class': ''} }) }}
						{{ form_widget(form.titols, { 'attr': {'class': 'form-control'} }) }}
					</div>
				</div>
				<div class="col-md-4 col-xs-6">
					<div class="form-group">
					   	{{ form_label(form.titolsexterns, 'Titols altres organismes', { 'label_attr': {'class': ''} }) }}
						{{ form_widget(form.titolsexterns, { 'attr': {'class': 'form-control'} }) }}
					</div>
				</div>
				<div class="col-md-2 col-md-offset-2 col-xs-10 col-xs-offset-2 col-last-right">
					<div class="form-group">
						<label class="" for="form_submit">&nbsp;</label>
						<button id="formdadespersonals-submit"  type="submit" class="btn btn-default btn-lg"><i class="fa fa-search blue"></i> cerca</button>
					</div>
				</div>
			</div>
		</section>
    {{ form_end(form) }}

    {% for flashMessage in app.session.flashbag.get('error-notice') %}
    <div class="sms-notice">
		{{ flashMessage }}
  	</div>	
	{% endfor %}
	<div id="llista-dadespersonals" class="llista-dadespersonals">
		<div class="table-header">	
		   	<div id="list-header">
		   		<div id="header-dadespersonalsid" class="col-listheader">id</div>
		   		<div id="header-dadespersonalsdni" class="col-listheader col-noresponsive col-listheader-sortable">{{ knp_pagination_sortable(persones, 'DNI', 'e.dni') }}
		   				<span class="listheader-icon {% if persones.isSorted('e.dni') %} listheader-icon-{{ sortparams['direction'] }} {% endif %}"></span></div>
		   		<div id="header-dadespersonalscognomsnom" class="col-listheader col-noresponsive col-listheader-sortable">{{ knp_pagination_sortable(persones, 'Nom', 'e.cognoms') }}
		   				<span class="listheader-icon {% if persones.isSorted('e.cognoms') %} listheader-icon-{{ sortparams['direction'] }} {% endif %}"></span></div>
		   		<div id="header-dadespersonalsnaixement" class="col-listheader col-noresponsive col-listheader-sortable">{{ knp_pagination_sortable(persones, 'Nascut/da', 'e.datanaixement') }}
		   				<span class="listheader-icon {% if persones.isSorted('e.nom') %} listheader-icon-{{ sortparams['direction'] }} {% endif %}"></span></div>
		   		<div id="header-dadespersonalshistorialllicencies" class="col-listheader listheader-noorder">Llicències</div>
		   		<div id="header-dadespersonalshistorialtitulacions" class="col-listheader listheader-noorder">Titulacions i docències</div>
		   		<div id="header-dadespersonalsactions" class="col-listheader listheader-noorder total-rowcount">Total: {{ persones.getTotalItemCount|number_format(0, ',', '.') }}</div>
		   	</div>
	   	</div>
		{% if persones|length > 0 %}
		<div class="table-noscroll table-noscroll-large">
		   	<ol id="list-data">
			{% for persona in persones %}
			   		<li class="data-detall">
				   		<div class="data-detall-cell dadespersonals-id">{{ persona.id }}</div>
				   		<div class="data-detall-cell dadespersonals-dni col-noresponsive">{{ persona.dni }}</div>
				   		<div class="data-detall-cell dadespersonals-cognomsnom col-noresponsive">{{ persona.cognomsnom }}</div>
				   		<div class="data-detall-cell dadespersonals-naixement col-noresponsive">{% if persona.datanaixement is not null %} {{ persona.datanaixement|date('d/m/Y') }}{% endif %}</div>
				   		<div class="data-detall-cell dadespersonals-historialllicencies">
				   			<a class="link-historial historial-llicencies nolink" href="{{ path('FecdasBundle_historialllicencies', { 'id': persona.id }) }}"  alt="Historial de llicències" title="Historial de llicències">
				   			<i class="fa fa-history orange"></i><span>{{ persona.getInfoHistorialLlicencies(admin, persones.params.desde, persones.params.fins) }}</span>
			   				</a>
						</div>
						<div class="data-detall-cell dadespersonals-historialtitulacions">
							{% set titulacions = persona.getInfoHistorialTitulacions() %}
							{% if titulacions != '' %}
				   				<a class="link-historial historial-titulacions nolink" href="{{ path('FecdasBundle_historialtitulacions', { 'id': persona.id }) }}"  alt="Historial de titulacions" title="Historial de titulacions">
				   					<i class="fa fa-graduation-cap systemblue"></i><span>{{ titulacions }}</span>
			   					</a>
			   				{% else %}
			   					<span>{{ titulacions }}</span>
			   				{% endif %}
						</div>
				   		{% if persona.llicenciaVigent is not null and persona.llicenciaVigent.parte is not null %}
							<div class="data-detall-cell dadespersonals-actions">
								{% if admin == true %}
			   						{# persona és una metapersona #}
			   						{% set personaId = persona.llicenciaVigent.persona.id %}
			   					{% else %}
			   						{% set personaId = persona.id %}
			   					{% endif %}

								{% if persona.llicenciaVigent.parte.allowPrintLlicencia == true %}
									<a class="llicencia-imprimir link" href="{{ path('FecdasBundle_licensetopdf', { 'id': persona.llicenciaVigent.id}) }}" alt="Imprimir llicència" title="Imprimir llicència">
										<i class="fa fa-list-alt fa-1x orange"></i></a>
								{% endif %}
								{% if admin == true %}
									<a class="llicencia-duplicat link" href="{{ path('FecdasBundle_duplicatllicencia', { 'id': persona.llicenciaVigent.id}) }}" 
										data-club="{{ persona.llicenciaVigent.parte.club.nom }}"
										data-persona="{{ persona.nomcognoms }}" alt="Duplicat llicència" title="Duplicat llicència">
										<i class="fa fa-copy fa-1x lightblue"></i></a>
								{% endif  %}
								{% if persona.llicenciaVigent.parte.allowRenovar %}
									<a class="llicencia-renovar link" href="{{ path('FecdasBundle_renovarllicencia', { 'id': persona.llicenciaVigent.id }) }}" alt="Renovar llicència" title="Renovar llicència">
					   					<i class="fa fa-retweet fa-1x green"></i></a>
				   				{% endif %}
				   				<a class="parte-action-view link" href="{{ path('FecdasBundle_parte', { 'id': persona.llicenciaVigent.parte.id, 'action':'view' }) }}"  alt="Veure llicència" title="Veure llicència">
				   					<i class="fa fa-search fa-1x blue"></i></a>
								<a class="formpersona-openmodal link" href="{{ path('FecdasBundle_persona', { 'id': personaId }) }}" name="modal" alt="Editar dades federat" title="Editar dades federat">
				   					<i class="fa fa-user fa-1x red"></i></a>
			   				</div>
			   			{% else %}
			   				{% if persona.lastLlicencia is not null and persona.lastLlicencia.parte is not null %}
			   					{% if admin == true %}
			   						{# persona és una metapersona #}
			   						{% set personaId = persona.lastLlicencia.persona.id %}
			   					{% else %}
			   						{% set personaId = persona.id %}
			   					{% endif %}
				   				<div class="data-detall-cell dadespersonals-actions">
			   					<a class="llicencia-renovar link" href="{{ path('FecdasBundle_renovarllicencia', { 'id': persona.lastLlicencia.id }) }}" alt="Renovar llicència" title="Renovar llicència">
			   						<i class="fa fa-retweet fa-1x green"></i></a>
			   					<a class="parte-action-view link" href="{{ path('FecdasBundle_parte', { 'id': persona.lastLlicencia.parte.id, 'action':'view' }) }}" alt="Veure llicència" title="Veure llicència">
			   						<i class="fa fa-search fa-1x blue"></i></a>
				   				<a class="formpersona-openmodal link" href="{{ path('FecdasBundle_persona', { 'id': personaId })  }}" name="modal"  alt="Editar dades federat" title="Editar dades federat">
			   						<i class="fa fa-user fa-1x red"></i></a>
			   					</div>
			   				{% else %}
			   					{% if admin != true %}
			   						{# persona NO és una metapersona #}
				   					<div class="data-detall-cell dadespersonals-actions">
				   					<a class="formpersona-openmodal link" href="{{ path('FecdasBundle_persona', { 'id': persona.id }) }}" name="modal"  alt="Editar dades federat" title="Editar dades federat">
				   						<i class="fa fa-user fa-1x red"></i></a>
				   					</div>
			   					{% endif %}
			   				{% endif %}	
				   		{% endif %}		
			   		</li>
			{% endfor %}
			</ol>
		</div>
		{% if persones.getTotalItemCount > 10 %}<div class="navigation">Pàgines: {{ knp_pagination_render(persones, null, sortparams) }}</div>{% endif %}		
	   	{% else %}
	        <div class="sms-notice">Cerca sense resultats</div>
	    {% endif %}
	    <div id="historial-overlay" class="finestra-overlay"></div>
	</div>
    
   
    <div id="edicio-persona" class="finestra-overlay"></div>
    
{% endblock %}

{% block javascripts %}

	{{ parent() }}

	<!-- Datetime plugin's. http://xdsoft.net/jqplugins/datetimepicker/ -->
	<script src="{{ asset('js/jquery.datetimepicker.js') }}" type="text/javascript"></script>

	<script src="{{ asset('js/utils/purl.js') }}" type="text/javascript"></script>
	
	<script type="text/javascript">
	
	$(document).ready(function(){
		setMenuActive("menu-persones");

		$("select#form_clubs").select2({
			minimumInputLength: 2,
			allowClear: true,
			placeholder: 'Escollir club'
		});

		$("select#form_titols").select2({
			minimumInputLength: 2,
			allowClear: true,
			placeholder: 'Escollir títol'
		});

		$("select#form_titolsexterns").select2({
			minimumInputLength: 2,
			allowClear: true,
			placeholder: 'Escollir altre títols'
		});
		
		helpBubbles("#form_dni", '<p>Indica tot o part del <b>DNI/NIE</b> a cercar</p>');
		
		helpBubbles("#form_nom", '<p>Indica tot o part del <b>NOM</b> a cercar</p>\
		<p>La cerca no distingeix majúscules o minúscules</p>');
	
		helpBubbles("#form_cognoms", '<p>Indica tot o part dels <b>COGNOMS</b> a cercar</p>\
		<p>La cerca no distingeix majúscules o minúscules</p>');

		$('#form_dadespersonals').submit(function ( e ) {
		
			// Recarrega consulta afegint la dades del formulari
			var url = "{{ path('FecdasBundle_dadespersonals', sortparams)|raw }}";
		
			var params = []; 
			params.push( {'name':'clubs','value': $('#form_clubs').val()} );
			params.push( {'name':'vigent','value': ($('#form_vigent').is(':checked'))?1:0} );
			params.push( {'name':'dni','value': $('#form_dni').val()} );
			params.push( {'name':'nom','value': $('#form_nom').val()} );
			params.push( {'name':'cognoms','value': $('#form_cognoms').val()} );
			params.push( {'name':'desde','value': $('#form_desde').val()} );
			params.push( {'name':'fins','value': $('#form_fins').val()} );
			params.push( {'name':'titols','value': $('#form_titols').val()} );
			params.push( {'name':'titolsexterns','value': $('#form_titolsexterns').val()} );
			
			redirectLocationUrlParams(url, params);

			e.preventDefault();
		});

		var current = new Date();
		var mindate = new Date (current.getFullYear()-5, current.getMonth(), current.getDay());
		var maxdate = new Date (current.getFullYear()+1, current.getMonth(), current.getDay());
		initDateTimePicker ( 
			$( '#form_desde' ), 
			mindate, 
			maxdate, 
			current, 
			'desde-picker', 
			false,
			function (selectedDateTime) {
				//dadespersonalsReload("{# path('FecdasBundle_dadespersonals', sortparams)|raw #}");  
			}
		);
	
		initDateTimePicker ( 
			$( '#form_fins' ), 
			mindate, 
			maxdate, 
			current, 
			'fins-picker', 
			false,
			function (selectedDateTime) {
				//dadespersonalsReload("{# path('FecdasBundle_dadespersonals', sortparams)|raw #}"); 
			}
		);

		$('#form_vigent').change(function () {
			// Recarrega consulta afegint la dades del formulari
			if ( $('#form_vigent').is(':checked') ) {
				$( '#form_desde, #form_fins' ).prop('disabled', 'disabled').val( '' );
				//$( '#form_desde, #form_fins' ).prop('placeholder', '--');
			} else {
				// Posar dates any en curs
				$( '#form_desde, #form_fins' ).removeAttr('disabled');
				$( '#form_desde' ).val( '01/01/'+current.getFullYear() );	
				$( '#form_fins' ).val( '31/12/'+current.getFullYear() );
				//dadespersonalsReload("{# path('FecdasBundle_dadespersonals', sortparams)|raw #}");
			}
			
		});

		showHistorialLlicencies();


		//select all the a tag with name equal to modal
		$('.formpersona-openmodal')
	    .off('click')
	    .click(function(e) {
			//Cancel the link behavior
	        e.preventDefault();
	         
	        var url = $(this).attr("href");
	        showPersonModal(url, 'dadespersonals', function () {
		        // Reload 
	        	$('#form_dadespersonals').submit();
	        });
	    });

		$(window).resize(function() {
			hideMask();
	        
	        if ($.browser.msie) $('.dadespersonals-historial').hide(); 
	    	else $('.dadespersonals-historial').slideUp('slow');
		});
		
		


		$( ".llicencia-duplicat" ).click(function (e) {
			e.preventDefault();
			
			var url = $(this).attr('href');

			var club = $(this).attr('data-club'); 

			var persona = $(this).attr('data-persona');
			
			var strHtml = "<p>Duplicat llicència "+persona+"</p>";
			strHtml += "   <div class='form-group'>";
			strHtml += "	  <div class='checkbox'>";
			strHtml += "		<label>";
			strHtml += "			<input type='checkbox' value='0' id='checkfactura'>"; 
			strHtml += "			Cal crear una comanda nova per aquest duplicat a càrrec del club "+club+"?";
			strHtml += "		</label>";
			strHtml += "	  </div>";
			strHtml += "      <div id='formduplicat-datafactura' style='display:none'>";
			strHtml += "      	<label for='comanda_datafactura'>Data facturació</label>";
			strHtml += "	    <input type='text' id='datafacturacio' disabled='disabled'/>";
			strHtml += "      </div>";
			strHtml += "  </div>";

			dialegConfirmacio(strHtml, 'Comanda duplicat', 'auto', 400, function() { 
				
				url += '&factura='+($('#checkfactura').is(':checked')?1:0)+'&datafacturacio='+$('#datafacturacio').val();
					
				window.location = url;
				 
			}, function() { }, function() {

				$("#checkfactura").click(function(){
					var checked = $(this).is(':checked');
					if (checked) {
						$( "#datafacturacio" ).datepicker({
				      		showOn: "button",
				            //buttonImage: "/images/icon-calendar.gif",
				            buttonText: "<i class='fa fa-calendar fa-1x blue'></i>",
				            //buttonImageOnly: true,
				            dateFormat: 'dd/mm/yy'
				      	});
					    
					  	$( "#datafacturacio" ).datepicker( "setDate", new Date() );

					  	$( "#formduplicat-datafactura").show();
					} else {
						$( "#formduplicat-datafactura").hide();

						$( "#datafacturacio" ).datepicker('destroy');
					}
				});
				
	        	
			});
		});
		
	});
	
	</script>


{% endblock %}
