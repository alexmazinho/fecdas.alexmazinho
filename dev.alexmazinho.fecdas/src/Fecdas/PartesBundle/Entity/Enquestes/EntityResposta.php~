<?php
namespace Fecdas\PartesBundle\Entity\Enquestes;

use Doctrine\ORM\Mapping as ORM;

/**
 * @ORM\Entity
 * @ORM\Table(name="e_respostes")
 * 
 * @author alex
 *
 */
class EntityResposta {
	
	/**
	 * @ORM\Id
	 * @ORM\Column(type="integer")
     * @ORM\GeneratedValue(strategy="AUTO")
	 */
	protected $id;	

	/**
	 * @ORM\ManyToOne(targetEntity="EntityRealitzacio")
	 * @ORM\JoinColumn(name="realitzacio", referencedColumnName="id")
	 */
	protected $realitzacio;
	
	/**
	 * @ORM\ManyToOne(targetEntity="EntityPregunta")
	 * @ORM\JoinColumn(name="pregunta", referencedColumnName="id")
	 */
	protected $pregunta;
	
	/**
	 * @ORM\Column(type="text", nullable=true)
	 */
	protected $repostatxt;

	/**
	 * @ORM\Column(type="boolean")
	 */
	protected $repostabool;

	/**
	 * @ORM\Column(type="integer", nullable=true)
	 */
	protected $repostarang;
	
	
	public function __construct($user, $enquesta) {
		$this->repostabool = true;
	}

    /**
     * Get id
     *
     * @return integer 
     */
    public function getId()
    {
        return $this->id;
    }

    /**
     * Set repostatxt
     *
     * @param text $repostatxt
     */
    public function setRepostatxt($repostatxt)
    {
        $this->repostatxt = $repostatxt;
    }

    /**
     * Get repostatxt
     *
     * @return text 
     */
    public function getRepostatxt()
    {
        return $this->repostatxt;
    }

    /**
     * Set repostabool
     *
     * @param boolean $repostabool
     */
    public function setRepostabool($repostabool)
    {
        $this->repostabool = $repostabool;
    }

    /**
     * Get repostabool
     *
     * @return boolean 
     */
    public function getRepostabool()
    {
        return $this->repostabool;
    }

    /**
     * Set repostarang
     *
     * @param integer $repostarang
     */
    public function setRepostarang($repostarang)
    {
        $this->repostarang = $repostarang;
    }

    /**
     * Get repostarang
     *
     * @return integer 
     */
    public function getRepostarang()
    {
        return $this->repostarang;
    }

    /**
     * Set realitzacio
     *
     * @param Fecdas\PartesBundle\Entity\Enquestes\EntityRealitzacio $realitzacio
     */
    public function setRealitzacio(\Fecdas\PartesBundle\Entity\Enquestes\EntityRealitzacio $realitzacio)
    {
        $this->realitzacio = $realitzacio;
    }

    /**
     * Get realitzacio
     *
     * @return Fecdas\PartesBundle\Entity\Enquestes\EntityRealitzacio 
     */
    public function getRealitzacio()
    {
        return $this->realitzacio;
    }

    /**
     * Set pregunta
     *
     * @param Fecdas\PartesBundle\Entity\Enquestes\EntityPregunta $pregunta
     */
    public function setPregunta(\Fecdas\PartesBundle\Entity\Enquestes\EntityPregunta $pregunta)
    {
        $this->pregunta = $pregunta;
    }

    /**
     * Get pregunta
     *
     * @return Fecdas\PartesBundle\Entity\Enquestes\EntityPregunta 
     */
    public function getPregunta()
    {
        return $this->pregunta;
    }
}